# Environment Variables Template
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the actual values. NEVER commit the actual .env files!

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=NextJS App
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_API_TIMEOUT=5000

# Database
# Example: mongodb://localhost:27017/nextapp_dev
# Example: mongodb+srv://user:password@cluster.mongodb.net/dbname
DATABASE_URL=your_database_connection_string_here
DATABASE_NAME=your_database_name

# Authentication
# Generate strong random secrets: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# External APIs
# Get these from your service providers
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
SENDGRID_API_KEY=your_sendgrid_api_key
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here

# Notes:
# - Replace all placeholder values with actual credentials
# - Never commit files containing real secrets to Git
# - Use GitHub Secrets for CI/CD deployments
# - Different environments should have different secrets